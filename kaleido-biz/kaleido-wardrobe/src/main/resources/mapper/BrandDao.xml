<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoo.kaleido.wardrobe.infrastructure.dao.BrandDao">

    <!-- 基础列映射 -->
    <sql id="Base_Column_List">
        id, name, logo_path, description
    </sql>

    <resultMap id="BaseResultMap" type="com.xiaoo.kaleido.wardrobe.infrastructure.dao.po.BrandPO">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="logo_path" property="logoPath" />
        <result column="description" property="description" />
    </resultMap>

    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_wardrobe_brand WHERE id = #{id} AND deleted = 0
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_wardrobe_brand 
        WHERE deleted = 0
        ORDER BY created_at DESC
    </select>

    <select id="existsByName" resultType="boolean">
        SELECT COUNT(1) > 0 FROM t_wardrobe_brand 
        WHERE name = #{name}
          AND deleted = 0
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_wardrobe_brand WHERE id = #{id} AND deleted = 0
    </select>

</mapper>
