<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoo.kaleido.coin.infrastructure.dao.CoinStreamDao">

    <!-- 金币流水表映射结果 -->
    <resultMap id="BaseResultMap" type="com.xiaoo.kaleido.coin.infrastructure.dao.po.CoinStreamPO">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="type" property="type" />
        <result column="amount" property="amount" />
        <result column="balance_after" property="balanceAfter" />
        <result column="biz_type" property="bizType" />
        <result column="biz_id" property="bizId" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 基础列名 -->
    <sql id="Base_Column_List">
        id, user_id, type, amount, balance_after, biz_type, biz_id, remark
    </sql>

    <!-- 根据用户ID查询流水列表（按创建时间倒序排列） -->
    <select id="findByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user_coin_stream
        WHERE user_id = #{userId}
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根据业务类型和业务ID查询流水 -->
    <select id="findByBizTypeAndBizId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user_coin_stream
        WHERE biz_type = #{bizType}
        AND biz_id = #{bizId}
        AND deleted = 0
        LIMIT 1
    </select>

    <!-- 检查业务是否已处理 -->
    <select id="existsByBizTypeAndBizId" resultType="java.lang.Boolean">
        SELECT COUNT(1) > 0
        FROM t_user_coin_stream
        WHERE biz_type = #{bizType}
        AND biz_id = #{bizId}
        AND deleted = 0
    </select>

    <!-- 根据用户ID删除流水记录（逻辑删除） -->
    <update id="deleteByUserId" parameterType="java.lang.String">
        UPDATE t_user_coin_stream
        SET deleted = 1, updated_at = NOW()
        WHERE user_id = #{userId}
        AND deleted = 0
    </update>

</mapper>
