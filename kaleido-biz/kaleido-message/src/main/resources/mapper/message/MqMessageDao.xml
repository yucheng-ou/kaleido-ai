<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoo.kaleido.message.infrastructure.dao.MqMessageDao">

    <!-- 基础列映射 -->
    <sql id="Base_Column_List">
        id,user_id, message, topic, state
    </sql>

    <!-- 根据ID查询消息 -->
    <select id="findById" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE id = #{id}
        AND deleted = 0
    </select>

    <!-- 根据用户ID查询消息列表 -->
    <select id="findByUserId" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE user_id = #{userId}
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根据主题查询消息列表 -->
    <select id="findByTopic" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE topic = #{topic}
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根据用户ID和主题查询消息列表 -->
    <select id="findByUserIdAndTopic" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE user_id = #{userId}
        AND topic = #{topic}
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 根据状态查询消息列表 -->
    <select id="findByState" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE state = #{state}
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 检查消息是否存在 -->
    <select id="exists" resultType="boolean">
        SELECT COUNT(1) > 0
        FROM t_mq_message
        WHERE id = #{id}
        AND deleted = 0
    </select>

    <!-- 查询所有未被删除的消息 -->
    <select id="findAllNotDeleted" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 查询处理中的消息（创建状态） -->
    <select id="findProcessingMessages" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE state = 'CREATE'
        AND deleted = 0
        ORDER BY created_at ASC
    </select>

    <!-- 查询终态的消息（已完成或失败） -->
    <select id="findFinalStateMessages" resultType="com.xiaoo.kaleido.message.infrastructure.dao.po.MqMessagePO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_mq_message
        WHERE state IN ('COMPLETED', 'FAIL')
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

</mapper>
